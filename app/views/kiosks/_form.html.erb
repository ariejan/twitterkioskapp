<% semantic_form_for @kiosk, :html => { :multipart => true } do |form| %>

  <% form.inputs do %>
    <%= form.input :name %>
    <%= form.input :fxs, :as => :check_boxes %>
    <%= form.input :speed, :value => "4000", :label => "Time between tweets in milliseconds" %>
    <%= form.input :background, :as => :file, :label => "Choose a image size that fits your screen size (1024x768 for example)" %>
  <% end %>
  
  <% form.buttons do %>
    <%= form.commit_button %>
  <% end %>
<% end %>

