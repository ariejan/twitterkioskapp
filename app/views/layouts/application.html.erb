<!DOCTYPE html>
<html>
<head>
  <title>TwitterKioskApp</title>
  <%= stylesheet_link_tag "tweets.css" %>
  <%= stylesheet_link_tag "tables.css" %>
  <%= formtastic_stylesheet_link_tag %>
  <%= javascript_include_tag "jquery-1.4.2.min.js" %>
  <%= javascript_include_tag "jquery.cycle.all.min.js" %>
  <%= javascript_include_tag "jrails.js" %>
  
  <%= csrf_meta_tag %>
  
  <script type="text/javascript">

    var _gaq = _gaq || [];
    _gaq.push(['_setAccount', 'UA-3168729-1']);
    _gaq.push(['_trackPageview']);

    (function() {
      var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
      ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
    })();

  </script>
  
</head>
<body>
  <div id="nav">  
    <ul>
      <li><a href="/">Home</a></li>
      
      <% if user_signed_in? %>  
        <li><a href="/kiosks">Kiosks</a></li>
        <li><a href="/users/sign_out">Logout</a></li>
      <% else %>
        <li><a href="/users/sign_up">Sign up</a></li>
        <li><a href="/users/sign_in">Log in</a></li>
      <% end %>
    </ul>
    <div style="clear:both"></div>
  </div>
  
    <div id="content">
      <%= yield %>
    </div>
  
</body>
</html>
